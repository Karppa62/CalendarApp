
<h1>@ViewBag.Title</h1>

<form class="form-horizontal" data-bind="submit: addEvent">

    <div class="form-group" data-bind="with: newEvent">
        <label for="inputEventName" class="col-sm-2 control-label">Event name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="EventName" data-bind="value:EventName" required />
        </div>

        <label for="inputDateTime" class="col-sm-2 control-label">Date and time</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="DateAndTime" data-bind="value:DateAndTime" required
                   placeholder="dd.mm.yyyy HH:MM"/>
        </div>

        <label for="inputDuration" class="col-sm-2 control-label">Duration</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Duration" data-bind="value:Duration" required min="1" />
        </div>
    </div>
    <button type="submit" class="btn btn-default">Create event</button>
</form>

<div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
<div class="alert alert-danger" data-bind="visible: success"><p data-bind="text: success"></p></div>


